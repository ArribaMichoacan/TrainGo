<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TrainGo.UserControls.CustomToolBarView"
    x:Name="thisView">
    <ContentView.Content>
        <Grid
            Padding="2"
            BackgroundColor="#D9D9D9"
            ColumnDefinitions="0*,*,*"
            ColumnSpacing="0"
            HeightRequest="40"
            RowSpacing="0"
            VerticalOptions="StartAndExpand">

            <!--  Aqui debe ir el logo de amgo  -->
            <Image
                Grid.Column="1"
                HeightRequest="40"
                Source="amgoLogo"
                WidthRequest="40" />

            <Label
                Grid.Column="2"
                BindingContext="{Reference thisView}"
                FontAttributes="Bold"
                FontSize="Subtitle"
                HorizontalOptions="StartAndExpand"
                Text="{Binding ToolBarTitle}"
                TextColor="Gray" />

            <Image
                Grid.Column="3"
                HeightRequest="40"
                Source="logoMittal"
                WidthRequest="40" />

        </Grid>
    </ContentView.Content>
</ContentView>